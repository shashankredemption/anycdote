<div class="row top-buffer" class="transitions-enabled">
  <div id="anycdotes"> 
  <script src="anycdote.js" type="text/javascript"></script>
     <% @anycdotes.each do |anycdote| %>
    <div class="box panel panel-default">
      <div id="main_content" class ="panel-body">
  <%= image_tag anycdote.image.url(:medium) %> 
  <%= audio_tag anycdote.audio.url(:medium) %>
        <%= anycdote.story %>

      </div>
      <div class="panel-body">
      <%= anycdote.location %>  
      </div>
    <div class="panel-body"> 
        <%= link_to 'Show', anycdote %>
        <% if anycdote.user == current_user %>
          <%= link_to 'Edit', edit_anycdote_path(anycdote) %> 
          <%= link_to 'Destroy', anycdote, method: :delete, data: { confirm: 'Are you sure?' } %> 
          
        <%end %>  
        

      </div>
      
    </div>
  <% end %>
  </div>
</div>
     