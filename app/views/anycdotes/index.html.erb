<div class="row top-buffer">
<div id="anycdotes" class="transitions-enabled">
  <% @anycdotes.each do |anycdote| %>
    <div class="box panel panel-default">
      <%= anycdote.user.email %>
      <%= anycdote.title %>
      <%= anycdote.story %>
      <%= anycdote.location %>
      <%= link_to 'Show', anycdote %>
      <% if anycdote.user == current_user %>
        <%= link_to 'Edit', edit_anycdote_path(anycdote) %>
        <%= link_to 'Destroy', anycdote, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%end %>
    </div>
  <% end %>
  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Anycdote', new_anycdote_path %>
    <% end %>
</div>
</div>