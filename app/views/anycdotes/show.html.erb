<div class="row top-buffer">

<%= image_tag @anycdote.image.url(:medium) %>

	<p>
  	<strong>Audio File:</strong>
  	<%= audio_tag @anycdote.audio.url(:small) %>
  	<audio controls>
  		<source src="Best.mp3" type="audio/mpeg">
 		  
		Your browser does not support the audio element.
		</audio>
	</p>

	<p>
  	<strong>Story:</strong>
  	<%= @anycdote.story %>
